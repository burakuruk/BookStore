@using BookStore.Web.Services
@model CategoryDto
@{
    ViewData["Title"] = "Kategori Düzenle";
}
<div class="container py-4">
    <h2>Kategori Düzenle</h2>
    <form asp-area="Admin" asp-controller="Categories" asp-action="Edit" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label class="form-label">Ad</label>
            <input class="form-control" asp-for="Name" />
        </div>
        <div class="mb-3">
            <label class="form-label">Açıklama</label>
            <textarea class="form-control" asp-for="Description" rows="3"></textarea>
        </div>
        <button class="btn btn-primary">Güncelle</button>
        <a class="btn btn-secondary" asp-action="Index">Geri</a>
    </form>
</div>



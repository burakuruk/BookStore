@using BookStore.Web.Services
@model CategoryDto
@{
    ViewData["Title"] = "Kategori Oluştur";
}
<div class="container-fluid py-2">
    <h2>Kategori Oluştur</h2>
    <form asp-area="Admin" asp-controller="Categories" asp-action="Create" method="post" class="mt-3">
        <div class="mb-3">
            <label class="form-label">Ad</label>
            <input class="form-control" asp-for="Name" />
        </div>
        <div class="mb-3">
            <label class="form-label">Açıklama</label>
            <textarea class="form-control" asp-for="Description" rows="3"></textarea>
        </div>
        <button class="btn btn-primary" type="submit">Kaydet</button>
        <a class="btn btn-secondary" asp-action="Index">Geri</a>
    </form>
</div>



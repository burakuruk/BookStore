@using BookStore.Web.Services
@model BookCreateUpdateDto
@{
    ViewData["Title"] = "Kitap Düzenle";
    var categories = ViewBag.Categories as List<CategoryDto> ?? new();
}
<div class="container py-4">
    <h2>Kitap Düzenle</h2>
    <form asp-area="Admin" asp-controller="Books" asp-action="Edit" method="post" enctype="multipart/form-data" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <div class="row g-3">
            <div class="col-md-8">
                <div class="mb-3">
                    <label class="form-label">Başlık</label>
                    <input class="form-control" asp-for="Title" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Yazar</label>
                    <input class="form-control" asp-for="Author" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Fiyat</label>
                    <input class="form-control" asp-for="Price" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Kategori</label>
                    <select class="form-select" asp-for="CategoryId">
                        @foreach (var c in categories)
                        {
                            <option value="@c.Id" selected="@(Model.CategoryId==c.Id)">@c.Name</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-md-4">
                <div class="mb-3">
                    <label class="form-label">Kapak Görseli (yeni)</label>
                    <input type="file" class="form-control" name="image" accept="image/*" />
                </div>
            </div>
        </div>
        <button class="btn btn-primary">Güncelle</button>
        <a class="btn btn-secondary" asp-action="Index">Geri</a>
    </form>
</div>



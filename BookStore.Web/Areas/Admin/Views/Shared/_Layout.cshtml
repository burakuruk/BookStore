@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Admin | BookStore</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .admin-shell { display: grid; grid-template-columns: 260px 1fr; min-height: 100vh; }
        .admin-aside { background: var(--surface); border-right: 1px solid var(--border); padding-top:.75rem }
        .admin-aside a { color: var(--text); text-decoration: none; display: block; padding: .7rem 1rem; border-radius: .6rem; }
        .admin-aside a:hover, .admin-aside a.active { background: rgba(255,215,0,.18); color: var(--text); }
        .admin-header { background: var(--elev); border-bottom: 1px solid var(--border); color: var(--text); position:sticky; top:0; z-index:10 }
        .admin-stat{ background:#fff; border:1px solid var(--border); border-radius:12px; padding:1rem 1.25rem; box-shadow:0 6px 18px rgba(0,0,0,.06) }
        [data-theme="light"] .admin-stat{ background:#fff }
    </style>
  </head>
  <body>
    <div class="admin-shell">
      <aside class="admin-aside p-3">
        <div class="d-flex align-items-center gap-2 mb-3 text-white">
            <i class="bi bi-speedometer2"></i>
            <span class="fw-semibold">Yönetim</span>
        </div>
        <nav class="d-grid gap-1">
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="@(Context.Request.Path.Value!.Contains("Dashboard")?"active":"")"><i class="bi bi-house me-2"></i>Panel</a>
            <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="@(Context.Request.Path.Value!.Contains("Categories")?"active":"")"><i class="bi bi-tags me-2"></i>Kategoriler</a>
            <a asp-area="Admin" asp-controller="Books" asp-action="Index" class="@(Context.Request.Path.Value!.Contains("Books")?"active":"")"><i class="bi bi-journal-text me-2"></i>Kitaplar</a>
        </nav>
      </aside>
      <main>
        <header class="admin-header p-3 d-flex justify-content-between align-items-center">
          <div class="text-white-50">@ViewData["Title"]</div>
          <div class="d-flex align-items-center gap-2">
            <a class="btn btn-sm btn-outline-light" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-box-arrow-up-right"></i> Siteye Dön</a>
          </div>
        </header>
        <section class="p-4">
            @RenderBody()
            @await Html.PartialAsync("_Toasts")
        </section>
      </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>



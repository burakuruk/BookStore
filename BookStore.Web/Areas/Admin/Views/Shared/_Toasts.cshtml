@{
    var success = TempData["Success"] as string;
    var error = TempData["Error"] as string;
    var info = TempData["Info"] as string;
}

<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1100;">
    @if (!string.IsNullOrWhiteSpace(success))
    {
        <div class="toast show align-items-center text-bg-success border-0" role="alert">
            <div class="d-flex">
                <div class="toast-body">@success</div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    }
    @if (!string.IsNullOrWhiteSpace(error))
    {
        <div class="toast show align-items-center text-bg-danger border-0 mt-2" role="alert">
            <div class="d-flex">
                <div class="toast-body">@error</div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    }
    @if (!string.IsNullOrWhiteSpace(info))
    {
        <div class="toast show align-items-center text-bg-info border-0 mt-2" role="alert">
            <div class="d-flex">
                <div class="toast-body">@info</div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    }
</div>



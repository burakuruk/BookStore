@using BookStore.Web.Services
@model List<BookStore.Web.Models.CartItemViewModel>
@{
    ViewData["Title"] = "Sepet";
    var total = ViewBag.Total is decimal d ? d : 0m;
}
<div class="container py-4">
    <h2 class="mb-4">Sepet</h2>
    @if (!Model.Any())
    {
        <div class="alert alert-warning">Sepetiniz boş.</div>
    }
    else
    {
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Kitap</th>
                    <th style="width:160px">Miktar</th>
                    <th>Birim Fiyat</th>
                    <th>Toplam</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td>@i.Title</td>
                    <td>
                        <form asp-action="Decrease" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@i.BookId" />
                            <button class="btn btn-sm btn-outline-secondary">-</button>
                        </form>
                        <span class="mx-2 fw-semibold">@i.Quantity</span>
                        <form asp-action="Increase" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@i.BookId" />
                            <button class="btn btn-sm btn-outline-secondary">+</button>
                        </form>
                    </td>
                    <td>@i.UnitPrice.ToString("C")</td>
                    <td>@((i.UnitPrice * i.Quantity).ToString("C"))</td>
                    <td>
                        <form asp-action="Remove" method="post">
                            <input type="hidden" name="id" value="@i.BookId" />
                            <button class="btn btn-sm btn-outline-danger">Sil</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <div class="d-flex justify-content-between">
            <div></div>
            <div class="text-end">
                <div class="fs-5">Genel Toplam: <strong>@total.ToString("C")</strong></div>
                <form asp-action="Checkout" method="post" class="mt-3">
                    <input type="hidden" name="userId" value="1" />
                    <button class="btn btn-primary">Siparişi Tamamla</button>
                </form>
            </div>
        </div>
    }
</div>



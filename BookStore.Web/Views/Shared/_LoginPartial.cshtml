@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav ms-3">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index">@User.Identity?.Name</a>
    </li>
    <li class="nav-item">
        <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index","Home")" method="post">
            <button type="submit" class="btn btn-link nav-link">Çıkış</button>
        </form>
    </li>
}
else
{
    <li class="nav-item"><a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Giriş</a></li>
    <li class="nav-item"><a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Kayıt Ol</a></li>
}
</ul>


